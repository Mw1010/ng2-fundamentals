{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-trailing-whitespace": false,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "whitespace": [
            false,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-seperator",
            "check-type",
        ]
    },
    "rulesDirectory": []
}